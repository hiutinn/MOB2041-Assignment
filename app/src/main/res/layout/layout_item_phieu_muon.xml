<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:padding="20dp"
    android:background="@drawable/background_corner20_bordergray"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvPmTenTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Thành viên: "
            android:textColor="@color/teal_700"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/pmRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPmTenTV">
            <TextView
                android:id="@+id/tvPmTenSach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tên sách: "
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvTraSach"
                android:text="Đã trả sách"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgXoaPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_delete_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pmRow2">
            <TextView
                android:id="@+id/tvPmTienThue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tiền thuê: "
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvPmNgayThue"
                android:text="Ngày thuê: "
                android:layout_marginLeft="45dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>