<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="10dp"
android:padding="20dp"
android:background="@drawable/background_corner20_bordergray"
android:layout_marginTop="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">
    <TextView
        android:id="@+id/tvTenSach"
        android:text="Tên sách: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTienThue"
        android:text="Tiền thuê: "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTenSach"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvLoaiSach"
        android:text="Loại sách: "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTienThue"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgXoaSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_delete_24" />
</RelativeLayout>

</androidx.cardview.widget.CardView>
